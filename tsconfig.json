{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@controllers/*": ["src/controllers/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@test/*": ["test/*"]
        },
    },
    "include": [
        "src/**/*",
        "custom.d.ts"
    ]
}