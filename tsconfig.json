{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "~~/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}